<div class="card">
    <div class="header">
        <h3  class="title cen">Edit Profile</h3>
    </div>
@using (Ajax.BeginForm("Guardar_puntos", "usuariofron", new AjaxOptions {  HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sel_crimen", OnSuccess = "limpiar()" }))
{
    <div class="content">
        <form>



            @Html.HiddenFor(x=>x.id)
            @Html.HiddenFor(x => x.longitud)
            @Html.HiddenFor(x => x.latitud)

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Crimen</label>
                      <!-- <div id="sel_crimen"></div>-->
                        @Html.TextBoxFor(x => x.id_peligro_tipo, new {  @class = "form-control" })
                     
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Fecha</label>

                        @Html.TextBoxFor(x => x.fecha, new { @type = "date", @class = "form-control" })
                    </div>
                </div>
              
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Comentario</label>
                        @Html.TextAreaFor(x => x.comentario, new { @class = "form-control", @cols = "20", @rows = "20",
                       @style =" margin: 0px - 4.5px 0px 0px; height: 319px; width: 536px;"                        })


                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Evidencia</label>
                        @Html.TextBoxFor(x => x.imagen, new { @type = "file" })
                        <img style="width:500px;height:300px;" id="img_destino" src="../imagenes/delitoa.jpg" alt="Tu imagen">
                       
                    </div>
                </div>
            </div>

          <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Zona</label>
                        @Html.TextBoxFor(x => x.zona, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                        <div class="form-group">
                            <div id="ModalMapPreview" style="width:100%; height:300px;"></div>
                        </div>


                        <button type="submit" class="btn btn-info btn-fill pull-left">Guardar</button>
           
         
            <div class="clearfix"></div>
        </form>
    </div>
}
</div>

    


